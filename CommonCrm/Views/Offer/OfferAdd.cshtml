                                        <input type="text" class="form-control" id="Gecerlilik" asp-for="Email" placeholder="Geçerlilik" required>
                                        <div class="invalid-feedback">
                                            Lütfen geçerli bir değer girin.
                                        </div>
                                    </div>
                                </div>
