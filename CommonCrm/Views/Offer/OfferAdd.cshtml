                                        <input type="text" class="form-control" id="Sonlanma" asp-for="PhoneNumber" placeholder="Sonlanma" required>
                                        <div class="invalid-feedback">
                                            Lütfen geçerli bir değer girin.
                                        </div>
                                    </div>
                                </div>
