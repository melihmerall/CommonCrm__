                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <label for="KimlikNo" class="form-label">Kimlik No</label>
                                        <input type="text" class="form-control" id="KimlikNo" asp-for="TcNo" placeholder="Kimlik No" required>
                                        <div class="invalid-feedback">
                                            Lütfen geçerli bir Kimlik No girin.
                                        </div>
                                    </div>
                                </div>
