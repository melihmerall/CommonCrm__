@model CommonCrm.Business.DTOs.CreateProductDto

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <title>Create Product</title>
</head>
<body>

<div class="container mt-5">
    <h2>Create Product</h2>

    <form asp-action="CreateProduct" asp-controller="Admin" method="post">
        <div class="mb-3">
            <label asp-for="Name" class="form-label"></label>
            <input asp-for="Name" class="form-control" required />
        </div>

        <div class="mb-3">
            <label asp-for="EnglishName" class="form-label"></label>
            <input asp-for="EnglishName" class="form-control" />
        </div>

        <div class="mb-3">
            <label asp-for="Code" class="form-label"></label>
            <input asp-for="Code" class="form-control" />
        </div>

        <div class="mb-3">
            <label asp-for="CategoryIds" class="form-label"></label>
            <select asp-for="CategoryIds" asp-items="Model.Categories" class="form-select" multiple required>

            </select>
        </div>

        <div class="mb-3">
            <label asp-for="UnitId" class="form-label"></label>
            <select asp-items="Model.ProductUnits" asp-for="UnitId" class="form-select" required>

            </select>
        </div>

        <div class="mb-3">
            <label asp-for="AttributeId" class="form-label"></label>
            <select asp-items="Model.Attributes" asp-for="AttributeId" class="form-select" required>

            </select>
        </div>

        <!-- TL -->
        <div class="mb-3">
            <label asp-for="SalesPriceTL" class="form-label"></label>
            <input asp-for="SalesPriceTL" type="number" class="form-control" required />
        </div>

        <div class="mb-3">
            <label asp-for="KdvTL" class="form-label"></label>
            <input asp-for="KdvTL" type="number" class="form-control" required />
        </div>

        <div class="mb-3">
            <label asp-for="TotalTL" class="form-label"></label>
            <input asp-for="TotalTL" type="number" class="form-control" required />
        </div>

        <!-- Dolar -->
        <div class="mb-3">
            <label asp-for="SalesPriceDolar" class="form-label"></label>
            <input asp-for="SalesPriceDolar" type="number" class="form-control" required />
        </div>

        <div class="mb-3">
            <label asp-for="KdvDolar" class="form-label"></label>
            <input asp-for="KdvDolar" type="number" class="form-control" required />
        </div>

        <div class="mb-3">
            <label asp-for="TotalDolar" class="form-label"></label>
            <input asp-for="TotalDolar" type="number" class="form-control" required />
        </div>

        <!-- Euro -->
        <div class="mb-3">
            <label asp-for="SalesPriceEuro" class="form-label"></label>
            <input asp-for="SalesPriceEuro" type="number" class="form-control" required />
        </div>

        <div class="mb-3">
            <label asp-for="KdvEuro" class="form-label"></label>
            <input asp-for="KdvEuro" type="number" class="form-control" required />
        </div>

        <div class="mb-3">
            <label asp-for="TotalEuro" class="form-label"></label>
            <input asp-for="TotalEuro" type="number" class="form-control" required />
        </div>

        <div class="mb-3">
            <label asp-for="OfferQuantity" class="form-label"></label>
            <input asp-for="OfferQuantity" type="number" class="form-control" required />
        </div>

        <div class="mb-3">
            <label asp-for="Description" class="form-label"></label>
            <textarea asp-for="Description" class="form-control" rows="3"></textarea>
        </div>

        <button type="submit" class="btn btn-primary">Create Product</button>
    </form>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
