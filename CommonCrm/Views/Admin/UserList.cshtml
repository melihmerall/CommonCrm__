@using  CommonCrm.Data.Entities.AppUser
@model List<ApplicationUser>
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <title>User List</title>
    <style>
        body {
            padding: 20px;
        }
    </style>
</head>
<body>

<div class="container">
    <h2>User List</h2>

    <table class="table">
        <thead>
        <tr>
            <th>User Db Id </th>
            <th>Kullanıcı Adı</th>
            <th>Email</th>
            <th>Aktif mi?</th>
            <th>Müşteri mi?</th>
            <th>Şirket mi?</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var i in Model)
        {
            var isActive = ((@i.IsActive) ? "Aktif" : "Değil");
            <tr>
                <td>@i.Id</td>
                <td>@i.UserName</td>
                <td>@i.Email</td>
                <td>@isActive</td>
                <td>@i.IsCustomer</td>
                <td>@i.IsCompany</td>
            </tr>
        }
        

        </tbody>
    </table>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>