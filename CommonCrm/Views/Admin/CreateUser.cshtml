@using CommonCrm.Data.Entities.AppUser
@using Microsoft.AspNetCore.Mvc.TagHelpers
@model CommonCrm.Models.UserVM.CreateUserViewModel

@{
    Layout = null;
}

<!DOCTYPE html>

<html lang="tr">
<head>
    <title>Create User</title>
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
    <!-- Özel CSS (opsiyonel) -->
    <link rel="stylesheet" href="path/to/custom-style.css">
</head>
<body>
<div class="container">
    <h1>Create User</h1>

    <form asp-action="CreateUser" asp-controller="Admin" method="post" class="needs-validation" >
        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

        <div class="form-group">
            <label asp-for="UserName">Username</label>
            <input asp-for="UserName" class="form-control" required />
            <div class="invalid-feedback">
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="Email">Email</label>
            <input asp-for="Email" class="form-control" required />
            <div class="invalid-feedback">
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="Password">Password</label>
            <input asp-for="Password" type="password" class="form-control" required />
            <div class="invalid-feedback">
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="ConfirmPassword">Confirm Password</label>
            <input asp-for="ConfirmPassword" type="password" class="form-control" required />
            <div class="invalid-feedback">
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>
        </div>

        <!-- Yeni Eklenen Alanlar -->
        <div class="form-group">
            <label asp-for="Country">Country</label>
            <input asp-for="Country" class="form-control" />
        </div>

        <div class="form-group">
            <label asp-for="City">City</label>
            <input asp-for="City" class="form-control" />
        </div>

        <div class="form-group">
            <label asp-for="Description">Description</label>
            <textarea asp-for="Description" class="form-control"></textarea>
        </div>

        <div class="form-group">
            <label asp-for="IsActive">Is Active</label>
            <input asp-for="IsActive" type="checkbox" />
        </div>

        <div class="form-group">
            <label asp-for="IsCompany">Is Company</label>
            <input asp-for="IsCompany" type="checkbox" />
        </div>

        <div class="form-group">
            <label asp-for="IsCustomer">Is Customer</label>
            <input asp-for="IsCustomer" type="checkbox" />
        </div>

        <div class="form-group">
            <label asp-for="CompanyTitle">Company Title</label>
            <input asp-for="CompanyTitle" class="form-control" />
        </div>

        <div class="form-group">
            <label asp-for="ImagePath">Image Path</label>
            <input asp-for="ImagePath" class="form-control" />
        </div>

        <div class="form-group">
            <label asp-for="BirthDate">Birth Date</label>
            <input asp-for="BirthDate" type="date" class="form-control" />
        </div>

        <div class="form-group">
            <label asp-for="Gender">Gender</label>
            <select asp-for="Gender" asp-items="Html.GetEnumSelectList<Gender>()" class="form-control"></select>
        </div>
        <!-- Yeni Eklenen Alanlar -->

        <button type="submit" class="btn btn-primary">Create User</button>
    </form>
</div>

<!-- Bootstrap JS ve Popper.js -->
<script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>

</body>
</html>