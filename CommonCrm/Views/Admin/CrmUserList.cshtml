@using CommonCrm.Data.Entities.AppUser
@model List<ApplicationUser>




<!-- Responsive datatable examples -->

<div class="page-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="page-title-box d-sm-flex align-items-center justify-content-between">
                    <h4 class="mb-sm-0">Kullanıcı Listesi</h4>

                    <div class="page-title-right">
                        <ol class="breadcrumb m-0">
                            <li class="breadcrumb-item">
                                <a href="/">CRM</a>
                            </li>
                            <li class="breadcrumb-item active">Kullanıcı Listesi</li>
                        </ol>
                    </div>

                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-body">

                        <h4 class="card-title">Crm Müşterileri</h4>
                        <p class="card-title-desc">
                            Müşteri bilgilerini excel ve pdf formatta indirebilir daha detaylı inceleyebilirsiniz.
                        </p>

                        <table id="datatable-buttons" class="table table-striped table-bordered dt-responsive nowrap"
                               style="border-collapse: collapse; border-spacing: 0; width: 100%;">
                            <thead>
                            <tr>
                                <th>İsim - Soyisim</th>
                                <th>Email</th>
                                <th>Aktif mi?</th>
                                <th>Ödediği Ücret</th>
                                <th>Şirket Adı</th>
                                <th></th>
                                <th></th>

                            </tr>
                            </thead>


                            <tbody>
                            @foreach (var i in Model)
                            {
                                var isActive = (@i.IsActive) ? "Aktif" : "Değil";

                                <tr>
                                    <td>@i.Name @i.Surname</td>
                                    <td>@i.Email</td>
                                    <td>@isActive</td>
                                    <td>@i.PaidPrice</td>
                                    <td>@i.CompanyTitle</td>
                                    <td><a href="/"><i class="ri-edit-2-fill"></i></a></td>
                                    <td><a href="/admin/deleteuser/@i.Id"><i class="ri-delete-bin-fill"></i></a></td>
                                </tr>
                            }

                            </tbody>
                        </table>
                    </div>
                </div>
            </div> <!-- end col -->
        </div> <!-- end row -->

    </div> <!-- container-fluid -->
</div>
<!-- End Page-content -->

